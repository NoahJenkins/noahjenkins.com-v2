{
  "private": true,
  "packageManager": "pnpm@10.17.1",
  "scripts": {
    "preinstall": "node -e \"if(!/pnpm/.test(process.env.npm_config_user_agent||'')){console.error('This repository uses pnpm only. Run: pnpm install');process.exit(1)}\"",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ui": "playwright test",
    "test:ui:headed": "playwright test --headed",
    "test:ui:debug": "playwright test --debug",
    "test:all": "pnpm test && pnpm test:ui",
    "test:all:ci": "pnpm test -- --passWithNoTests && pnpm test:ui",
    "test:all:clean": "pkill -f 'next dev' || true && pnpm test && pnpm test:ui"
  },
  "dependencies": {
    "@tailwindcss/postcss": "4.2.0",
    "@types/node": "25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/sanitize-html": "^2.16.0",
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.34.2",
    "geist": "^1.7.0",
    "lucide-react": "^0.574.0",
    "next": "^16.1.6",
    "next-themes": "^0.4.6",
    "postcss": "^8.5.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "sanitize-html": "^2.17.0",
    "sugar-high": "^0.9.5",
    "tailwind-merge": "^3.4.1",
    "tailwindcss": "4.2.0",
    "typescript": "5.9.3",
    "wavesurfer.js": "^7.12.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "ts-jest": "^29.4.6"
  },
  "pnpm": {
    "overrides": {
      "minimatch": ">=10.2.1"
    }
  }
}
